{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@adbjs/actions",
	"version": "0.1.0",
	"description": "A set of actions that we use for our workflows",
	"scripts": {
		"build": "tsc --noEmit && tsup",
		"test": "vitest run --config ../../vitest.config.ts",
		"lint": "prettier --check . && cross-env TIMING=1 eslint --format=pretty src",
		"format": "prettier --write . && cross-env TIMING=1 eslint --fix --format=pretty src",
		"fmt": "pnpm run format"
	},
	"directories": {
		"lib": "src",
		"test": "__tests__"
	},
	"files": [
		"dist"
	],
	"contributors": [
		"Fabricio Pasapera Viera (@Hadez)"
	],
	"license": "Apache-2.0",
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/adbjs/adb.js.git"
	},
	"bugs": {
		"url": "https://github.com/adbjs/adb.js/issues"
	},
	"funding": "https://github.com/adbjs/adb.js?sponsor",
	"devDependencies": {
		"@actions/core": "^1.11.1",
		"@favware/cliff-jumper": "^6.0.0",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^3.2.4",
		"cross-env": "^10.1.0",
		"esbuild-plugin-version-injector": "^1.2.1",
		"eslint": "^9.39.1",
		"eslint-config-neon": "^0.2.9",
		"eslint-formatter-compact": "^9.0.1",
		"eslint-formatter-pretty": "^7.0.0",
		"prettier": "^3.7.4",
		"tsup": "^8.5.1",
		"turbo": "^2.6.3",
		"typescript": "~5.9.3"
	},
	"engines": {
		"node": ">=22.12.0"
	}
}
