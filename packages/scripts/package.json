{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@adbjs/scripts",
	"version": "0.1.0",
	"description": "A set of scripts that we use for our workflows",
	"private": true,
	"scripts": {
		"build": "tsc --noEmit --lib ESNext,DOM && tsup",
		"lint": "prettier --check . && cross-env TIMING=1 eslint --format=pretty src turbo/generators/config.ts",
		"format": "prettier --write . && cross-env TIMING=1 eslint --fix --format=pretty src turbo/generators/config.ts",
		"fmt": "pnpm run format"
	},
	"exports": {
		".": {
			"require": {
				"types": "./dist/src/index.d.ts",
				"default": "./dist/src/index.js"
			},
			"import": {
				"types": "./dist/src/index.d.mts",
				"default": "./dist/src/index.mjs"
			}
		}
	},
	"main": "./dist/src/index.js",
	"module": "./dist/src/index.mjs",
	"types": "./dist/src/index.d.ts",
	"directories": {
		"lib": "src",
		"example": "turbo"
	},
	"files": [
		"dist"
	],
	"contributors": [
		"Fabricio Pasapera Viera (@Hadez)"
	],
	"license": "Apache-2.0",
	"keywords": [
		"discord",
		"bot",
		"framework",
		"node",
		"adbjs"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/adbjs/adb.js.git",
		"directory": "packages/scripts"
	},
	"bugs": {
		"url": "https://github.com/adbjs/adb.js/issues"
	},
	"funding": "https://github.com/adbjs/adb.js?sponsor",
	"dependencies": {
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@turbo/gen": "^2.6.3",
		"@types/node": "^24.10.1",
		"cross-env": "^10.1.0",
		"eslint": "^9.39.1",
		"eslint-config-neon": "^0.2.9",
		"eslint-formatter-compact": "^9.0.1",
		"eslint-formatter-pretty": "^7.0.0",
		"prettier": "^3.6.2",
		"terser": "^5.44.0",
		"tsup": "^8.5.1",
		"turbo": "^2.6.3",
		"typescript": "~5.9.3"
	},
	"engines": {
		"node": ">=22.12.0"
	}
}
